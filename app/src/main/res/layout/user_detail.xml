    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">





    <TextView android:id="@+id/input_name"
        android:layout_width="564dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:hint="name"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    " />



    <TextView android:id="@+id/input_phone"
        android:layout_width="565dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:layout_marginLeft="10dp"
        android:hint="phone"
        android:layout_below="@+id/input_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/input_diagnosis"
        android:layout_width="565dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:hint="Diagnosis"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/input_phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/input_date"
        android:layout_width="565dp"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:layout_marginBottom="10dp"
        android:hint="Date"
        android:layout_below="@+id/input_diagnosis"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/input_treatment"
        android:layout_width="565dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:hint="treatment"
        android:layout_below="@+id/input_date"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <GridView android:layout_height="wrap_content"
        android:layout_below="@+id/input_treatment"
        android:id="@+id/gridView_user"
        android:horizontalSpacing="1dp"
        android:numColumns="4"

        android:layout_width="match_parent"
        ></GridView>

    <!--TODO
